@{
    ViewData["Title"] = "Login";
}

<style>
    .admin-textTopic {
        text-align: left;
        font-weight: bold;
        line-height: 0.2;
    }

    .admin-card {
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;
        max-width: 750px;
        border-style: none;
    }

    .admin-logo {
        display: block;
        width: 20%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 120px;
    }

    .admin-btn {
        color: white;
        font-family: 'Bangers', cursive;
        padding: auto;
        font-size: 30px;
    }
</style>

<body>
    <div class="container">
        <img src="~/image/Index/Miraii LOGO.png" class="admin-logo">
    </div>


    <div class="container admin-card">
        @using (Html.BeginForm("Verify", "Management", FormMethod.Post))
        {
            <form data-aos="fade-up">
                <div class="card text-center">
                    <div class="card-header">
                        <h1 class="text-nav main-font">Only Management Team !</h1>
                    </div>
                    <div class="card-body ">
                        <br />
                        <input id="Text1" name="username" type="text" class="form-control text-center text-maincolor" placeholder="Username" required/>
                        <br />
                        <input id="Password1" name="password" type="password" class="form-control text-center text-seccolor admin-textTopic" placeholder="Password" required />
                        <br />
                    </div>
                    <p>Contact : miraii.team@gmail.com</p>
                    <div class="card-footer text-muted">
                        <input class="btn btn-warning admin-btn" id="Button1" type="submit" value="LOGIN" />
                    </div>
                </div>
            </form>
        }
    </div>

</body>



