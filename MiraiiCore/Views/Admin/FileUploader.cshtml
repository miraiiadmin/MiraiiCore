<style>
    .admin-textTopic {
        text-align: left;
        font-weight: bold;
        line-height: 0.2;
    }

    .admin-card {
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;
        max-width: 750px;
        border-style: none;
    }

    .admin-logo {
        display: block;
        width: 20%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 120px;
    }

    .admin-btn {
        color: white;
        font-family: 'Bangers', cursive;
        padding: auto;
        font-size: 30px;
    }

    .admin-fix {
        padding-top: 0px;
        padding-left: 0px;
        padding-bottom: 0px;
        border-style: none;
    }
</style>

<body>
    <div class="container">
        <img src="~/image/Index/Miraii LOGO.png" class="admin-logo">
    </div>

    <div class="container admin-card">
        <div class="card text-center">
            <div class="card-header">
                <h1 class="text-nav main-font"> Drop Your File HERE </h1>
            </div>
            <div class="card-body ">
                <br />

                <p class="admin-textTopic text-seccolor"> Select your file : </p>
                <input id="File1" type="file" class="form-control admin-fix " />
                <br /><br />



                <p class="admin-textTopic text-maincolor">Input name :</p>
                <input id="Text1" type="text" class="form-control" placeholder="" />
                <br />
                <br />

                <p class="admin-textTopic text-seccolor">Select your file type :</p>
                <select id="Select1" class="form-control">
                    <option>----</option>
                    <option>PNG</option>
                    <option>JPG</option>
                    <option>PDF</option>
                    <option>MP3</option>
                    <option>MP4</option>
                </select>
                <br />
                <br />

                <p class="admin-textTopic text-maincolor"> Description :</p>
                <textarea id="TextArea1" rows="5" cols="20" class="form-control" placeholder=""></textarea>
                <br />
                
            </div>
            <div class="card-footer text-muted">
                <input class="btn btn-warning admin-btn" id="Button1" type="button" value="Upload" />
            </div>
        </div>
    </div>

</body>



